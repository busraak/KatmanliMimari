@model KatmanliMimari.Ui.Models.UserModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Crud</h1>

<h4>AspNetUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" readonly> 
                <label asp-for="AspNetUsers.Id" class="control-label"></label>
                <input asp-for="AspNetUsers.Id" class="form-control" />
                <span asp-validation-for="AspNetUsers.Id" class="text-danger"></span>
            </div>
            <div class="form-group" readonly>
                <label asp-for="AspNetUsers.UserName" class="control-label"></label>
                <input asp-for="AspNetUsers.UserName" class="form-control" />
                <span asp-validation-for="AspNetUsers.UserName" class="text-danger"></span>
            </div>
    <div class="form-group">
                  <select asp-for="AspNetUsers.Roles" class="form-control">
                        @foreach (var item in Model.RoleSelect)
                        {
                                <option value="@item.Id">@item.Name</option>

                        }
                    </select>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Add Role" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

