@model KatmanliMimari.Ui.Models.CategoryModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.BtnHead</h1>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form method="post">
             <div class="form-group" hidden>
                <input asp-for="Categories.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Categories.CategoryName" class="control-label"></label>
                <input asp-for="Categories.CategoryName" class="form-control" />
                <span asp-validation-for="Categories.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Model.BtnVal" class="@Model.BtnClass" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
